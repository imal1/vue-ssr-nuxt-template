{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@nuxt/types",
      "@nuxt/content",
      "@types/node",
      "@nuxtjs/axios",
      "nuxt-i18n",
      "@nuxtjs/dayjs",
      "@nuxt/image",
      "@nuxtjs/auth-next",
    ]
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    ".nuxt-storybook",
    "dist"
  ]
}
