{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "plugin:import/recommended",
    "plugin:import/typescript",
    "plugin:nuxt/recommended",
    "@nuxtjs/eslint-config-typescript",
    "prettier"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "settings": {
    "import/ignore": [
      "node_modules"
    ]
  },
  // add your custom rules here
  "rules": {
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  }
}
